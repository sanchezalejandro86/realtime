                                        a.btn.btn-info.btn-sm(href="#") Perfil &nbsp;
                                        a.btn.btn-danger.btn-sm(href="#") Cerrar Sesión
            section.menu-section
                .container(style="margin-top:0px;")
                    .row
                        .col-xs-12
                            .navbar-collapse.collapse
                                ul.nav.navbar-nav.navbar-right#menu-top
